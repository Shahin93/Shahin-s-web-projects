package Filters;

import java.io.*;
import javax.servlet.*;
import javax.servlet.annotation.WebFilter;
import javax.servlet.http.*;
import org.apache.commons.validator.GenericValidator;
import ecommerce.utility.ValidationUtility;
import java.util.List;
import java.util.Map;


public class RegistrationFilter implements Filter {
    
    private static final boolean debug = true;
    private FilterConfig filterConfig = null;
       
    public void doFilter(ServletRequest request, ServletResponse response,
            FilterChain chain)
            throws IOException, ServletException {
        Throwable problem = null;
        try{
            HttpServletRequest req = (HttpServletRequest) request;
            HttpServletResponse res = (HttpServletResponse) response;
            ValidationUtility validate = new ValidationUtility();
            Map<String, List<String>> errorMap;
            errorMap = validate.validateRegistrationForm(req);
            System.out.print(" In the Registration Filter");
            if (!errorMap.isEmpty()){
                req.setAttribute("errorMessage", errorMap);
                System.out.println(errorMap.get("firstName"));
                System.out.println(errorMap.get("lastName"));
                System.out.println(errorMap.get("email"));
                System.out.println(errorMap.get("password"));
                System.out.println(errorMap.get("birthDate"));
                System.out.println(errorMap.get("address1"));
                System.out.println(errorMap.get("city"));
                System.out.println(errorMap.get("country"));
                System.out.println(errorMap.get("zip"));
                
                res.sendRedirect("registration.jsp");
            }
            chain.doFilter(request, response);
        } catch (Throwable t) {
            problem = t;
            t.printStackTrace();
        }
    }

    public void init(FilterConfig filterConfig) {        
        this.filterConfig = filterConfig;
    }

    @Override
    public void destroy() {
        filterConfig = null;
    }
}
